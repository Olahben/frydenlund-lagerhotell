@using System.ComponentModel.DataAnnotations
@using System.Globalization
@using System.Text
@using System.Text.Json
@using System.Collections.Generic
@using LagerhotellAPI.Models

@page "/logg-inn";


<AuthorizeView>
    <NotAuthorized>
        <MudGrid Style="margin-top: 46px; height: fit-content; margin-left: 6px; margin-right: 6px;" Justify="Justify.Center">
            <MudItem Style="display: flex; justify-content: center; padding-right: 24px !important;" xs="12">
                <MudPaper Square="false" Elevation="2" MaxWidth="380px" Style="padding: 18px; padding-bottom: 28px; padding-top: 28px;">
                    <MudText Style="font-weight:450;" Typo="Typo.h4">Logg inn</MudText>
                    <MudText Style="font-weight:450; margin-bottom: 18px;" Typo="Typo.body1">Bedre plass er ett steg nærmere</MudText>
                    <MudSwitch @bind-Value="companyUserLogIn" Color="Color.Info" Label="Bedriftsinnlogging"></MudSwitch>
                    @if (!companyUserLogIn)
                    {
                        <LoginForm />
                    } else {
                    <Lagerhotell.Pages.Login.CompanyUser.LoginCompanyUserForm />
                    }
                </MudPaper>
            </MudItem>
            <MudItem><MudText Style="text-align: center; margin-bottom: 72px;" Typo="Typo.body1">Har du ikke registrert deg? Registrer deg <MudLink Style="font-weight: 450;" Href="/registrer-deg">her</MudLink></MudText></MudItem>
        </MudGrid>
    </NotAuthorized>
    <Authorized>
        <LoggedIn />
    </Authorized>
</AuthorizeView>

@code {
    private bool companyUserLogIn = false;
}